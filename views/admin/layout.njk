<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    {% block title %}
        <title>Foodfy</title>
    {% endblock title %}

    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/admin.css">
    {% block styles %}
    {% endblock styles %}

</head>

<body>
    <div class="container">
        <header>
                <div class="logo">
                    <img src="/assets/logo-admin.png" alt="Logo Foodfy">
                </div>
        </header>

        <div class="content">
        {% block content %}
        {% endblock content %}
        </div>

        <footer>
            <p>Todos direitos reservados, receitas Foodfy.</p>
        </footer>
    </div>

    {% block modal %}
    {% endblock modal %}

    <script src="/scripts/menu.js"></script>
    {% block scripts %}
    {% endblock scripts %}
</body>
</html>
